<section class="section">
    <h3>Editar usúario: </h3>
    <div class="card">
        <div class="card-body">
            <form action="/admin/usuarios/edit" method="post">
                <div class="mb-3">
                    <label for="nome">Nome</label>
                    <input type="text" class="form-control" name="nome" value="{{usuarios.nome}}"
                        placeholder="Nome do usúario">
                </div>
                <div class="mb-3">
                    <label for="slug">Email</label>
                    <input type="email" class="form-control" name="email" value="{{usuarios.email}}"
                        placeholder="Email do usúario">
                </div>
                <div class="mb-3">
                    <label for="slug">Telefone</label>
                    <input type="text" class="form-control" name="telefone" value="{{usuarios.telefone}}"
                        placeholder="Telefone do usúario">
                </div>
                {{!-- {{#if usuarios.senha}}
                <div class="mb-3">
                    <label for="senha">Nova Senha</label>
                    <input type="password" class="form-control" name="senha" placeholder="Nova senha">
                </div>
                {{/if}} --}}
                <br />
                <input type="hidden" name="id" value="{{usuarios._id}}">
                <button type="submit" class="btn btn-success">Editar usúario</button>
            </form>
        </div>
    </div>
</section>